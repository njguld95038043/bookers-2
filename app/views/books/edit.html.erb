<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>

<div class="field">
  <label for="book_title"></label>
  <%= f.text_field :title, id:"book_title" %>
</div>

<div class="field">
  <label for="book_body"></label>
  <%= f.text_area :body, id:"book_body" %>
</div>

<%= f.submit 'Update Book' %>

<% end %>

<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', book_list_path %>